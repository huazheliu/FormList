page {
  background-color: lightblue;
}

.form-container {
  margin-left: 40rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
  font-size: 20px;
}

text {
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}

.input {
  margin: 0 0 8rpx 20rpx;
  height: 8rpx;
  width: 350rpx;
  border: 1px solid gray;
}

radio {
  margin: 0 25rpx 10rpx 20rpx;
}

checkbox {
  margin: 10rpx 0 0 20rpx;
}

.button-container {
  display: flex;
  flex-direction: row;
  margin: 50rpx 0 80rpx -100rpx;
}
